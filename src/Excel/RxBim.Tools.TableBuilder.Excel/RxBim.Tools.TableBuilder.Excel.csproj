<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PlatformTarget>x64</PlatformTarget>    
    <AssemblyName>$(MSBuildProjectName).$(Version)</AssemblyName>
    <Nullable>enable</Nullable>
    <LangVersion>default</LangVersion>
    <RootNamespace>RxBim.Tools.TableBuilder</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <Description>Contains RxBim.TableBuilder converters to/from an Excel workbook.</Description>
    <PackageId>$(MSBuildProjectName)</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ClosedXML" Version="0.96.0" />
    <PackageReference Include="RxBim.Di" Version="1.1.0-dev005" />
    <PackageReference Update="JetBrains.Annotations" Version="2022.1.0" />
    <PackageReference Update="StyleCop.Analyzers" Version="1.2.0-beta.435">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Core\RxBim.Tools.TableBuilder\RxBim.Tools.TableBuilder.csproj" />
  </ItemGroup>  

</Project>